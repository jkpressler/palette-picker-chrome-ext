{
  "manifest_version": 3,
  "name": "Palette Picker",
  "version": "1.0",
  "description": "Pick colors from any webpage and save them as a palette.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "pallete.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}